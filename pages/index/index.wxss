/**index.wxss**/
.home-nav {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  border-top: 1px solid #f2f2f2;
  border-left: 1px solid #f2f2f2;
}
.nav-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 50%;
  height: 300rpx;
  border-right: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
}
.nav-url {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.nav-img {
  width: 96rpx;
  height: 96rpx;
}
.nav-name {
  margin-top: 20rpx;
  font-size: 32rpx;
}
.usermotto {
  margin-top: 30rpx;
  text-align: center;
}
.user-motto {
  font-size: 36rpx;
}